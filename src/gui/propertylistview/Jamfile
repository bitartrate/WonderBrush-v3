SubDirHdrs $(WONDERBRUSH_TOP) src model property specific_properties ;
SubDirHdrs $(WONDERBRUSH_TOP) src support ;
# </pe-inc>

# additional source directories
SEARCH_SOURCE += [ FDirName $(WONDERBRUSH_TOP) src gui propertylistview
	specific_properties ] ;

